<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.example.juanv.a14juanms_2avf.salary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnXMLpro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Procesa XML" />

        <Button
            android:id="@+id/btnShowSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar salario" />

        <Button
            android:id="@+id/btnPasarArchivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasar a Archivo" />


        <TextView
            android:id="@+id/txtSalario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" />


    </LinearLayout>
</ScrollView>
